FROM docker.io/library/ubuntu:22.04

RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y git python3-venv python3-pip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# dependencies for gem / fpm
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y ruby ruby-dev rubygems build-essential && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# install fpm using gem
RUN gem install fpm

RUN python3 -m venv --system-site-packages /opt/venv && \
    /opt/venv/bin/python -m pip install pip==24.3.1 wheel==0.45.1 setuptools==50.3.2 && \
    /opt/venv/bin/python -m pip install pyinstaller==6.11.1
