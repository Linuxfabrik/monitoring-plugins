#!/usr/bin/env bash


dnf install -y /packages/linuxfabrik-monitoring-plugins*.rpm

mkdir -p output
for dir in /repos/monitoring-plugins/check-plugins/*; do
    check="$(basename "$dir")"
    if [ "$check" != "example" ]; then
        "/usr/lib64/nagios/plugins/$check" 1> "output/$check-stdout" 2> "output/$check-stderr"
        echo $? > "output/$check-retc"
    fi
done
