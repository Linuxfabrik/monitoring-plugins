def get_datafields_diff(diff):
    table_data = []
    for d in diff:
        for category, changes in d['diff'].items():
            if category == 'values_changed':
                for k, v in changes.items():
                    tmp = {}
                    tmp['varname'] = d['varname']
                    tmp['uuid'] = d['uuid']
                    tmp['changed'] = 'val:  ' + k.replace("root['", '').replace("']", '')
                    tmp['old_value'] = v['old_value']
                    tmp['new_value'] = v['new_value']
                    table_data.append(tmp)
            else:
                print(f'!!! Currently unhandled category {category}.')
                exit()

    return table_data


def get_commands_diff(diff):
    table_data = []
    for d in diff:
        for category, changes in d['diff'].items():
            if category == 'dictionary_item_removed':
                # not of any interest
                continue
            if category == 'dictionary_item_added':
                # not of any interest
                continue
            if category == 'values_changed':
                for k, v in changes.items():
                    tmp = {}
                    tmp['object_name'] = d['object_name']
                    tmp['uuid'] = d['uuid']
                    tmp['changed'] = 'val:  ' + k.replace("root['", '').replace("']", '')
                    tmp['old_value'] = v['old_value']
                    tmp['new_value'] = v['new_value']
                    table_data.append(tmp)
            elif category == 'type_changes':
                for k, v in changes.items():
                    tmp = {}
                    tmp['object_name'] = d['object_name']
                    tmp['uuid'] = d['uuid']
                    tmp['changed'] = 'type: ' + k.replace("root['", '').replace("']", '')
                    tmp['old_value'] = f'{v["old_type"]} ("{v["old_value"]}")'
                    tmp['new_value'] = f'{v["new_type"]} ("{v["new_value"]}")'
                    table_data.append(tmp)
            else:
                print(f'!!! Currently unhandled category {category}.')
                exit()

    return table_data


