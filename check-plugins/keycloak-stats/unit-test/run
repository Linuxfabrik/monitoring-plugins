                'assert-retc': 0,
            },
        ],
    },
    {
        'containerfile': 'containerfiles/keycloak-v22.0',
        'podman-run-params': '--publish=8080:8080 --env=KEYCLOAK_ADMIN=admin --env=KEYCLOAK_ADMIN_PASSWORD=admin',
        'tests': [
            {
                'run-where': 'localhost',
                'plugin-params': '',
                'assert-regex': r"Up .*, running under user `keycloak`; Java v",
                'assert-retc': 0,
            },
        ],
    },
    {
        'containerfile': 'containerfiles/keycloak-v23.0',
        'podman-run-params': '--publish=8080:8080 --env=KEYCLOAK_ADMIN=admin --env=KEYCLOAK_ADMIN_PASSWORD=linuxfabrik',
        'tests': [
