import os
import subprocess
import time
import unittest

CHECK_PLUGIN = 'keycloak-stats'
REMOTE_DIR = '/tmp'  # work dir in container (where to find the CHECK_PLUGIN in the container)
LOCAL_DIR = '..'  # local work dir (where to find the CHECK_PLUGIN locally)
TIMEOUT = 30
TESTS = [
    {
        'containerfile': 'containerfiles/keycloak-v18.0',
        'podman-run-params': '--publish=8080:8080 --env=KEYCLOAK_ADMIN=admin --env=KEYCLOAK_ADMIN_PASSWORD=admin',
        'tests': [
            {
                'run-where': 'localhost',
                'plugin-params': '',
                'assert-regex': r"Up .*, running under user `keycloak`; Java v",
                'assert-retc': 0,
            },
        ],
    },
    {
        'containerfile': 'containerfiles/keycloak-v19.0',
        'podman-run-params': '--publish=8080:8080 --env=KEYCLOAK_ADMIN=admin --env=KEYCLOAK_ADMIN_PASSWORD=admin',
        'tests': [
